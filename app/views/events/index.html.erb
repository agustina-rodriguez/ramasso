<p id="notice"><%= notice %></p>

<h1>Events</h1>
<link rel="stylesheet" href="app/assets/stylesheets/style.css">

<table class='table table-hover'>
  <thead class='table-primary'>
    <tr>
      <th>Name</th>
      <th>Edition</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.edition %></td>
        <td><%= event.location %></td>
        <td><%= link_to 'Show', event, class:'btn btn-sm btn-warning' %></td>
        <td><%= link_to 'Edit', edit_event_path(event), class:'btn btn-sm btn-primary' %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-sm btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @events %>

<br>

<%= link_to 'New Event', new_event_path, class:'btn btn-success' %>

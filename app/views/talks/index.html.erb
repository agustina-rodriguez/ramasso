<p id="notice"><%= notice %></p>

<h1>Talks</h1>

<form class="form-control me-2" method="GET" action="/talk_speakers" >
  BÃºsqueda por nombre o apellido:
  <input type="text" name="filter" value="" />
  <input class="btn btn-sm btn-outline-success" type="submit"/>
</form><br>

<table class='table table-hover'>
  <thead class='table-primary'>
    <tr>
      <th>Name</th>
      <th>Schedule</th>
      <th>Event</th>
      <th>Speaker</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @talks.each do |talk| %>
      <tr>
        <td><%= talk.name %></td>
        <td><%= talk.schedule %></td>
        <td><%= talk.event.name %></td>
        <td>
          <% talk.talk_speakers.all.each do |ts| %>
            <%= ts.speaker.full_name %><br>
          <% end %>
        </td>
        <td><%= link_to 'Show', talk, class:'btn btn-sm btn-warning'%></td>
        <td><%= link_to 'Edit', edit_talk_path(talk), class:'btn btn-sm btn-primary' %></td>
        <td><%= link_to 'Destroy', talk, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-sm btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @talks %>

<br>

